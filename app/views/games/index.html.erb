<div class="index-wrapper">
  <div class="index-banner">
    <div class="banner-navbar">
      <div class="nav-item dropdown">
        <%= link_to "Votre Magasin", "#", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Vus récemment", "#", class: "dropdown-item" %>
          <%= link_to "Curateurs Steam", "#", class: "dropdown-item" %>
          <%= link_to "Mis à jour récemment", "#", class: "dropdown-item" %>
        </div>
      </div>

      <div class="nav-item dropdown">
        <%= link_to "Jeux", "#", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Gratuit", "#", class: "dropdown-item" %>
          <%= link_to "Accès anticipé", "#", class: "dropdown-item" %>
          <%= link_to "Démos", "#", class: "dropdown-item" %>
        </div>
      </div>

      <div class="nav-item dropdown">
        <%= link_to "Logiciels", "#", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Animation et modélisation", "#", class: "dropdown-item" %>
          <%= link_to "Conception et illustration", "#", class: "dropdown-item" %>
          <%= link_to "Développement de jeux", "#", class: "dropdown-item" %>
        </div>
      </div>

      <div class="nav-item dropdown">
        <%= link_to "Matériel", "#", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Valve index", "#", class: "dropdown-item" %>
          <%= link_to "Steam controller", "#", class: "dropdown-item" %>
          <%= link_to "Steam link", "#", class: "dropdown-item" %>
        </div>
      </div>

      <%= link_to "Actualités", "#", class: "nav-item" %>
      <%= link_to "Steam Labs", "#", class: "nav-item" %>

      <form>
        <input placeholder="rechercher dans le magasin" type="text" name="name" id="name">
      </form>
    </div>

  </div>

  <h2>POPULAIRES ET RECOMMANDES</h2>
  <%# Carousel %>

  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <% @games.first(5).each_with_index do |game, index| %>
        <% if index == 0 %>
          <li data-target="#carouselExampleIndicators" data-slide-to=<%= index %> class="active"></li>
        <% else %>
          <li data-target="#carouselExampleIndicators" data-slide-to=<%= index %>></li>
        <% end %>
      <% end %>
    </ol>

    <div class="carousel-inner">

      <% @games.first(5).each_with_index do |game, index| %>
        <% if index == 0 %>
          <div class="carousel-item active">
            <img class="d-block" src=<%= game.image_url %> alt="First slide">
          </div>
        <% else %>
          <div class="carousel-item">
            <img class="d-block h-100" src=<%= game.image_url %> alt="Second slide">
          </div>
        <% end %>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <h2>OFFRES SPECIALES</h2>
  <div class="special-offers">
    <% @games.last(4).each do |game| %>
      <div class="special-offer-game">
        <img src=<%= game.icon_url %>>
        <%= game.name %>
      </div>
    <% end %>
  </div>

  <h2>PARCOURIR STEAM</h2>
  <div class="buttons">
    <a href="#" class="big-button">
      Nouveautés
    </a>
    <a href="#" class="big-button">
      Offres
    </a>
    <a href="#" class="big-button">
      Offres
    </a>
    <a href="#" class="big-button">
      Par tag des utilisateurs
    </a>
  </div>

  <div class="footer">
    <div class="footer-title">
      <span>Vous cherchez des recommandations ?</span>
    </div>
    <p>Connectez-vous pour voir les recommandations personnalisées</p>

    <a class="footer-button btn_border_2px btn_medium" href="https://store.steampowered.com/login/?snr=1_4_4__more-content-login">
      <span>Connexion</span>
    </a>
    <p>Ou inscrivez-vous et rejoignez <strong>Steam</strong> gratuitement</p>
  </div>
</div>
